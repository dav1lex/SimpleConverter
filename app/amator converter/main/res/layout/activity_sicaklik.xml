<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_sicaklik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".temperaturec"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/g_light"
            android:text="Temperature Converter"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editText_from"
            android:layout_width="160dp"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:hint="enter value"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10"
            android:textColor="#fff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="Convert" />


        <Spinner
            android:id="@+id/to_metre_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/spinner_kutu" />


        <TextView
            android:id="@+id/tv_birim1_sonuc"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/birim1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_birim2_sonuc"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"

            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/birim2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menu_sicaklik"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/navigation_menusu" />


</androidx.drawerlayout.widget.DrawerLayout>